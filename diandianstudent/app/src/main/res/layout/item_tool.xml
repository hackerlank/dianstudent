<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/base_line_pachytene"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="职业测试"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:textColor="@color/text_color_666666"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/icon_left"
        android:drawablePadding="3dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/imageViewZYNL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_zynlcs"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/imageJZG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_jzg"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            />
        <ImageView
            android:id="@+id/imageJCPHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_jcphd"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>