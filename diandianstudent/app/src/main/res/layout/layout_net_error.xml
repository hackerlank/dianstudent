<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_no_network"
             />
        <TextView
            android:id="@+id/netErrorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/net_error"
            android:textColor="@color/text_color_666666"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/nettV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/net_error_go"
            android:textColor="@color/text_color_666666"
            android:textSize="14dp" />
        <Button
            android:id="@+id/netBT"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/default_margin_20"
            style="@style/style_button_green_corners"
            android:text="@string/try_again"
            />
    </LinearLayout>

</RelativeLayout>