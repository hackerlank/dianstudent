<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/center">
    <LinearLayout
        android:id="@+id/alternavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/qianblue">
        <ImageView
            android:id="@+id/setingback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@mipmap/backwhites"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="@string/setting"
            android:textSize="20sp"
            android:textColor="@color/bg_White"/>
        <ImageView
            android:id="@+id/ddsetts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/circle_corner">
    <LinearLayout
        android:id="@+id/llalter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_xiug"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/alter"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/setxiu"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/youjian"
            android:layout_marginRight="18dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yiqiandao"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="14dp"
        />
    <LinearLayout
        android:id="@+id/llbindphone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_bi"
            android:layout_marginLeft="14dp"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/blindphone"
            android:textSize="15sp"
            android:textColor="@color/setxiu"
            />
        <TextView
            android:id="@+id/tvshoujihm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="未绑定"
            android:textColor="@color/xiangqin"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/youjian"
            android:layout_marginRight="18dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="18dp"
        android:background="@color/yiqiandao"
        />
    <LinearLayout
        android:id="@+id/llhelpcenter"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_qch"
            android:layout_marginLeft="14dp"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/qingchuhuan"
            android:textSize="15sp"
            android:textColor="@color/setxiu"
            />
        <TextView
            android:id="@+id/huancundaxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/xiangqin"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/youjian"
            android:layout_marginRight="18dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yiqiandao"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="14dp"
        />
    <LinearLayout
        android:id="@+id/banben"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_guanyu"
            android:layout_marginLeft="14dp"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/guanyuzhi"
            android:textSize="15sp"
            android:textColor="@color/setxiu"
            />
        <TextView
            android:id="@+id/banbenmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/setxius"
            android:textSize="15sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <View
        android:id="@+id/viset"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="18dp"
        android:background="@color/yiqiandao"
        />
    <LinearLayout
        android:id="@+id/faxian"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_diand"
            android:layout_marginLeft="14dp"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/faxianzuzi"
            android:textSize="15sp"
            android:textColor="@color/setxiu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="18dp"
            android:src="@mipmap/youjian"/>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/circle_cornerselect"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@mipmap/icon_outl"
                android:layout_marginLeft="14dp"/>
            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/outlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/outlogin"
                android:textSize="15sp"
                />
        </LinearLayout>
</LinearLayout>