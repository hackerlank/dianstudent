<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lldeta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/qianblue">
        <ImageView
            android:id="@+id/recordback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@mipmap/backwhites"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tvderecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/outyichtitles"
            android:textSize="20sp"
            android:textColor="@color/bg_White"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/recordshaixuan"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/all"
            android:textColor="@color/bg_White"
            android:textSize="16sp"
            android:drawableRight="@mipmap/next_white"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/recordshaixuans"
            android:layout_width="70dp"
            android:layout_height="52dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_vertical"
            android:text="@string/all"
            android:textColor="@color/qiangzi"
            android:textSize="15sp"
            android:gravity="center"
            android:drawableRight="@mipmap/next_gray"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/circle_corner"
            android:visibility="gone"
            />
    </LinearLayout>
    <com.dingli.diandians.view.VerticalSwipeRefreshLayout
        android:id="@+id/refrecord"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.dingli.diandians.view.XListView
            android:id="@+id/lvrecord"
            android:layout_width="match_parent"
            android:cacheColorHint="#00000000"
            android:layout_height="match_parent"
            android:background="@color/bg_White"
            android:divider="@color/bg_White"
            android:fadingEdge="none"
            android:listSelector="@drawable/page_list_selector"/>
            <LinearLayout
                android:id="@+id/llwulu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wudata"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无考勤记录哦"
                    android:textColor="@color/wujilu"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </com.dingli.diandians.view.VerticalSwipeRefreshLayout>
</LinearLayout>