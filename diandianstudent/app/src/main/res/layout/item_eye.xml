<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="@color/white"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/eyeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tvHrdType"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@mipmap/icon_live"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvHrdCount"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@mipmap/icon_pepole_count"
            android:text="234äºº"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tvHrdTitle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@mipmap/icon_jiuye_back"
            android:text=""
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/white"
        />
</LinearLayout>