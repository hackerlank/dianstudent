<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_White">
    <LinearLayout
        android:id="@+id/alternavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/qianblue">
        <ImageView
            android:id="@+id/alertback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@mipmap/backwhites"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/alertbacks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="@string/alter"
            android:textSize="20sp"
            android:textColor="@color/bg_White"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="26dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/oldpassword"
                android:layout_marginLeft="10dp"
                android:textColor="@color/wenzis"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/icon_line"
                android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/etoldpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/EditTextWithIcon"
                android:hint="@string/hintjiu"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yiqiandao"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newpassword"
                android:layout_marginLeft="10dp"
                android:textColor="@color/wenzis"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/icon_line"
                android:drawablePadding="10dp"/>
            <EditText
                android:id="@+id/etnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/yaoqiu"
                android:layout_marginLeft="10dp"
                style="@style/EditTextWithIcon"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yiqiandao"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="26dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inputpassword"
                android:layout_marginLeft="10dp"
                android:textColor="@color/wenzis"
                android:textSize="14sp"
                android:drawableLeft="@mipmap/icon_line"
                android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/etnewagain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/yaoqiu"
                android:layout_marginLeft="10dp"
                style="@style/EditTextWithIcon"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yiqiandao"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"/>
    <Button
        android:id="@+id/btrequire"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="@string/done"
        android:textColor="@color/bg_White"
        android:background="@drawable/code_click"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/tvjinggao"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"/>
</LinearLayout>