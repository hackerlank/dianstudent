<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_Gray_light"
    tools:context=".weipingjiao.WeiPJActivity">
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/qianblue"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wpjback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@mipmap/backwhites"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="未评教课程"
            android:textSize="20sp"
            android:textColor="@color/bg_White"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/ddwipj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            />
    </LinearLayout>
    <View
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wenzixian"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.dingli.diandians.view.XListView
            android:id="@+id/xlvWeipingjiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/bg_White"
            android:fadingEdge="none"
            android:listSelector="@drawable/page_list_selector"
            />
        <RelativeLayout
            android:id="@+id/rlxian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/ivkewu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wudata"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_below="@id/ivkewu"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有未评教的课程"
                android:textColor="@color/wujilu"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
