<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_White"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="266dp"
       >
       <ImageView
           android:id="@+id/rlson"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:scaleType="fitXY"
           android:background="@mipmap/centerbg"/>
       <RelativeLayout
           android:id="@+id/bgrled"
           android:layout_width="96dp"
           android:layout_height="96dp"
           android:background="@mipmap/cerg"
           android:layout_marginTop="40dp"
           android:layout_centerHorizontal="true">
       <com.dingli.diandians.login.CircleImageView
           android:id="@+id/personci"
           android:layout_width="96dp"
           android:layout_height="96dp"
           android:layout_centerInParent="true"
           />
       </RelativeLayout>
       <TextView
           android:layout_marginTop="12dp"
           android:layout_below="@id/bgrled"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tvmingzi"
           android:layout_centerHorizontal="true"
           android:textColor="@color/bg_White"
           android:textSize="14sp"
           android:textStyle="bold"/>
       <TextView
           android:layout_below="@id/tvmingzi"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tvmingzixs"
           android:textColor="@color/bg_White"
           android:layout_centerHorizontal="true"
           android:text="@string/xuehao"
           android:textSize="14sp"
           android:layout_marginTop="12dp"
           />
       <TextView
           android:layout_below="@id/tvmingzixs"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tvmingzix"
           android:textColor="@color/bg_White"
           android:layout_centerHorizontal="true"
           android:textSize="14sp"
           android:layout_marginTop="5dp"
           />
   </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llwoqing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/center_click"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/center_leave"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="36dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wodqing"
                android:textColor="@color/xiangqin"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/centers"/>
        <LinearLayout
            android:id="@+id/llwoyichang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/center_click"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/center_record"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="36dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/woqian"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="36dp"
                android:textSize="14sp"
                android:textColor="@color/xiangqin"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/centers"/>
        <LinearLayout
            android:id="@+id/llsurvey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/center_click"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/center_investigation"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="36dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/surve"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="36dp"
                android:textColor="@color/xiangqin"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/centers"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
      <LinearLayout
          android:id="@+id/ll_help"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center"
          android:background="@drawable/center_click">
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/center_help"
              android:layout_marginLeft="36dp"
              android:layout_marginRight="36dp"
              android:layout_marginTop="36dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/helpcenter"
              android:layout_marginBottom="36dp"
              android:textColor="@color/xiangqin"
              android:textSize="14sp"
              android:layout_marginTop="10dp"/>
      </LinearLayout>
         <View
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="@color/centers"/>
         <LinearLayout
             android:id="@+id/ll_sett"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:orientation="vertical"
             android:gravity="center"
             android:background="@drawable/center_click">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@mipmap/center_setup"
                 android:layout_marginLeft="36dp"
                 android:layout_marginRight="36dp"
                 android:layout_marginTop="36dp"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/setting"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="36dp"
                 android:textSize="14sp"
                 android:textColor="@color/xiangqin"/>
         </LinearLayout>
         <View
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="@color/centers"/>
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:orientation="vertical">
         </LinearLayout>
     </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_Gray_light"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>