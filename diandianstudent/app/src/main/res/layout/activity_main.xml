<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_White">

    <LinearLayout
        android:id="@+id/home_button_group"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/home_tab_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/ivfirstpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/firstpagexuan"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvfirstpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shouye"
                android:layout_gravity="center"
                android:textColor="@color/qianblue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_tab_kebiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/ivkebiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiaoxian"
                />
                <TextView
                    android:id="@+id/tvinfom"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_shuzi"
                    android:textColor="@color/bg_White"
                    android:gravity="center"
                    android:textSize="9dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvkebiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xiaoxi"
                android:layout_gravity="center"
                android:textColor="@color/qianblue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_tab_found"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/ivfound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/contact"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvfound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/founds"
                android:layout_gravity="center"
                android:textColor="@color/qianblue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_tab_wo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/ivmine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvmine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine"
                android:layout_gravity="center"
                android:textColor="@color/qianblue"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_above="@id/home_button_group"
        android:id="@+id/vpDianDian"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>
</RelativeLayout>