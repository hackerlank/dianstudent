<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@mipmap/rightbgs"
       android:layout_marginRight="10dp">
     <LinearLayout
         android:id="@+id/llshouye"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:orientation="horizontal"
         >
         <ImageView
             android:id="@+id/ivmg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_first"
             android:layout_marginLeft="15dp"
             android:layout_gravity="center_vertical"
             android:layout_marginTop="8dp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/shouye"
             android:textColor="@color/tv_White"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="8dp"
             android:textSize="17sp"
             android:layout_gravity="center_vertical"
             />
     </LinearLayout>
       <LinearLayout
           android:id="@+id/llinfor"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/icon_infor"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/information"
               android:textColor="@color/tv_White"
               android:layout_marginLeft="10dp"
               android:textSize="17sp"
               android:layout_gravity="center_vertical"
               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/llfound"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/icon_found"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/founds"
               android:textColor="@color/tv_White"
               android:layout_marginLeft="10dp"
               android:textSize="17sp"
               android:layout_gravity="center_vertical"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/llmine"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/icon_w"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/mine"
               android:textColor="@color/tv_White"
               android:layout_marginLeft="15dp"
               android:textSize="17sp"
               android:layout_gravity="center_vertical"/>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>