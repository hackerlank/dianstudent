<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayoutColumn"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/qianblue"
        app:tabIndicatorHeight="5dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/qianblue"
        app:tabTextColor="@color/text_color_404040"/>
    <LinearLayout
        android:id="@+id/flLin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tvJianJIE"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="简介"
        android:textSize="13dp"
        android:textColor="@color/qianblue"/>
    <TextView
        android:id="@+id/tvJiaoLiu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="交流"
        android:textSize="13dp"
        android:textColor="@color/text_color_404040"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerColumn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
      />
</LinearLayout>

