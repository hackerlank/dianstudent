<?xml version="1.0" encoding="utf-8"?>
<com.dingli.diandians.qingjia.ListItemClassView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
   > 
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/icon_biao"
          android:layout_centerVertical="true"
          android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/classnamed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="55dp"
            android:layout_centerVertical="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/kchuqd"
            />
        <ImageView
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bit_du"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"/>
</com.dingli.diandians.qingjia.ListItemClassView>