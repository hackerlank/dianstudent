<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/default_margin_10"
        android:layout_marginRight="@dimen/default_margin_12"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/mindImage"
            android:layout_width="128dp"
            android:layout_height="94dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@color/bg_Gray"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="心甘情愿的说好，温和而坚定的说不"
            android:layout_marginLeft="@dimen/default_margin_14"
            android:textSize="12dp"
            android:layout_marginTop="17dp"
            android:maxLines="2"
            android:layout_toRightOf="@+id/mindImage"
            android:textColor="@color/text_color_404040"
            />
        <TextView
            android:id="@+id/tvChakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2641"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_guankan"
            android:layout_marginLeft="@dimen/default_margin_14"
            android:drawablePadding="4dp"
            android:textSize="12dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mindImage"
            android:textColor="@color/text_color_888888"
            />
        <TextView
            android:id="@+id/tvDianZan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_zan"
            android:drawablePadding="4dp"
            android:layout_marginLeft="@dimen/default_margin_20"
            android:textSize="12dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tvChakan"

            android:textColor="@color/text_color_888888"
            />
    </RelativeLayout>

</LinearLayout>