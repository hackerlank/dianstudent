<?xml version="1.0" encoding="utf-8"?>
<com.dingli.diandians.found.ListContactView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:background="@color/bg_White"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.dingli.diandians.login.CircleImageView
            android:id="@+id/imgcenter"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:id="@+id/ll_jin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/contactren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/caos"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/contactxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_number"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/contactzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/records"
                android:layout_marginLeft="6dp"
                />
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/contactphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/qianblue"
            android:layout_gravity="bottom"
            android:textSize="21sp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yiqiandao"
        />
</com.dingli.diandians.found.ListContactView>